import { ErrorCatalog, getErrorByCode, getErrorsByLevel } from './ErrorCatalog';
import { ErrorLevel } from './ErrorLevel';
import { ErrorHandler } from './ErrorHandler.ts.bak';
import { Validator } from './Validator';

/**
 * エラーシステム作成関数
 * @returns エラーシステムオブジェクト
 */
const createErrorSystem = () => {
  const errorHandler = new ErrorHandler();
  const validator = new Validator(errorHandler);

  return {
    errorHandler,
    validator
  };
};

export {
  ErrorCatalog,
  ErrorLevel,
  ErrorHandler,
  Validator,
  getErrorByCode,
  getErrorsByLevel,
  createErrorSystem
};